<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_highlight"
    android:layout_marginBottom="@dimen/row_bottom_margin"
    android:gravity="bottom">

    <TextView
        android:id="@+id/deadlineTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sample"
        android:inputType="textMultiLine"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/row_title_size"
        android:maxLength="25"/>

    <TextView
        android:id="@+id/deadlineDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/row_date_size"/>

    <TextView
        android:id="@+id/deadlineDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:text="Another sample"
        android:textSize="@dimen/row_desc_size"
        android:textColor="@color/white"
        android:maxLength="25"/>

</LinearLayout>